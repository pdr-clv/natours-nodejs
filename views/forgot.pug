extends base

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Recover your password from your e-mail
      form.form.form--forgotpassword
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(type='email', placeholder='you@example.com', required)
        .form__group
          button.btn.btn--green Get Password